<div>
  <%# Conditionally set remote: true. Also, passing model name as data attribute %>
  <% modal ||= false %>
  <% remote = modal ? true : false %>
  <%= form_for(@character, remote: remote, html: {role: :form, 'data-model' => 'character'}) do |f| %>
  <fieldset>
    <%= token_tag nil %>
    <legend><% if f.object.new_record? %><%= t('character.form.new') %><% else %><%= t('character.form.edit') %><% end%> <%= t('character.form.resource') %></legend>
    <% if @character.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>
  
        <ul>
        <% @character.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :name, t('character.name'), :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => t('character.name') %>
        <span class="help-block"></span>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :alias, t('character.alias'), :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :alias, :class => "form-control", :placeholder => t('character.alias') %>
        <span class="help-block"></span>
      </div>
    </div>
  
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit t('character.form.save'), :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
  <% end %>
</div>
