<% if appearance.nil? %>
  Unknown
<% else %>
  <% if appearance.character.present? %>
    <%= link_to character_path(appearance.character) do %><%= appearance.name.blank? ? appearance.character.name : appearance.name %><% end %>
  <% else %>
    <%= appearance.name %>
  <% end %>
  <% if appearance.uncredited %>
    <small>(Uncredited)</small>
  <% end %>
<% end %>
