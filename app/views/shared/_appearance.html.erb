<% if appearance.character.present? %>
  <%= link_to character_path(appearance.character) do %>
    <% if appearance.name.blank? %>
      <%= appearance.character.name %>
    <% else %>
      <%= appearance.name %>
    <% end %>
  <% end %>
<% else %>
  <%= appearance.name %>
<% end %>
<% if appearance.uncredited %>
  <small>(Uncredited)</small>
<% end %>