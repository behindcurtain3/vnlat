<li>
    <div class="pull-left movie-poster">
        <%= image_tag movie.poster.url(:thumb), alt: movie.title %>
    </div>
    <div class="movie-item">
        <strong><%= link_to movie.title.upcase, movie_path(movie) %> <small>(<%= movie.year %>)</small></strong>
    </div>
    <div class="ratings">
        <%= render 'shared/buttons', movie: movie, sm: true %>
    </div>
    <% unless movie.tag_list.blank? %>
    <div class="tag-list-sm">
        <strong>Tags: </strong>
        <%= raw movie.tag_list.sort { |a,b| a <=> b }.map { |t| link_to t, tag_path(t) }.join(', ') %>
    </div>
    <% end %>
    <div class="clearfix"></div>
</li>
