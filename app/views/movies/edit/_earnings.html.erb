<h4 class="sidebar-header">Earnings List</h4>
<%= form_for @movie do |f| %>
  <input type="hidden" name="anchor" value="earnings" />
  <table class="table table-condensed">
    <tr>
      <th>Domestic</th>
      <th>Foreign</th>
      <th>Date</th>
      <th class="col-sm-1">Delete</th>
    </tr>
    <% @movie.earnings.each do |earning| %>
      <%= f.fields_for :earnings, earning do |earnings_form| %>
        <tr>
          <td><%= earnings_form.number_field :domestic, :class => "form-control", :placeholder => t('earning.domestic') %></td>
          <td><%= earnings_form.number_field :foreign, :class => "form-control", :placeholder => t('earning.foreign') %></td>
          <td><%= earnings_form.date_field :date, :class => "form-control", :placeholder => t('earning.date') %></td>
          <td class="text-center"><%= earnings_form.check_box :_destroy %></td>
        </tr>
      <% end %>
    <% end %>
    
    <tr>
      <td colspan="4">
        <%= f.submit t('earning.form.save'), :class => "btn btn-primary" %>
      </td>
    </tr>
  </table>
<% end %>

<h4 class="content-header">Add New Earning</h4>
<%= form_for(@earning) do |f| %>
  <fieldset>
    <%= f.hidden_field :movie_id, :value => @movie.id %>
    <input type="hidden" name="anchor" value="earnings" />
    
    <div class="form-group">
      <%= f.label :domestic, t('earning.domestic'), :class => "col-sm-2 control-label" %>
      <div class="col-sm-9">
        <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><i class="fa fa-usd fa-fw"></i></span>
  				<%= f.number_field :domestic, :class => "form-control", :placeholder => t('earning.domestic') %>
  			</div>
  			<span class="help-block"></span>
      </div>
  	</div>
  	
  	<div class="form-group">
      <%= f.label :foreign, t('earning.foreign'), :class => "col-sm-2 control-label" %>
      <div class="col-sm-9">
        <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><i class="fa fa-usd fa-fw"></i></span>
  				<%= f.number_field :foreign, :class => "form-control", :placeholder => t('earning.foreign') %>
  			</div>
  			<span class="help-block"></span>
      </div>
  	</div>
    
    <div class="form-group">
      <%= f.label :date, t('earning.date'), :class => "col-sm-2 control-label" %>
      <div class="col-sm-9">
  				<%= f.date_field :date, :class => "form-control", :placeholder => t('earning.date') %>
  				<span class="help-block"></span>
      </div>
  	</div>
    
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit t('earning.form.save'), :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
