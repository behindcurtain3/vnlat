<div class="col-sm-2">
  <%= image_tag @movie.poster.url(:medium), alt: @movie.title, class: "img-responsive" %>
</div>
<div class="col-sm-10">
  <h3 class="movie-title"><%= @movie.title.upcase %><small>&nbsp;(<%= @movie.year %>)
  <% if user_signed_in? %>
    <%= link_to t('movie.edit'), edit_movie_path %>
  <% end %>
  </small>
  </h3>
  
  <%= render 'shared/buttons', movie: @movie %>
  <button class="btn btn-default" data-container="body" data-toggle="popover" data-placement="right" title="<%= t('help.title') %>" data-content="<%= t('help.description') %>">
    <i class="fa fa-question-circle"></i>
  </button>
  <% if user_signed_in? %>
  <% if current_user.rated?(@movie) %>
  <%= link_to 'Edit Rating', edit_movie_rating_path(@movie, @rating), :class => "btn btn-primary" %>
  <%= link_to 'Delete Rating', movie_rating_path(@movie, @rating), :method => :delete, :class => "btn btn-primary" %>
  <% else %>
  <%= link_to 'Rate', new_movie_rating_path(@movie), :class => "btn btn-primary" %>
  <% end %>
  <% end %>
  <br />
  <div class="tag-list">
    <strong>Tags: </strong>
    <%= raw @movie.tag_list.sort { |a,b| a <=> b }.map { |t| link_to t, tag_path(t) }.join(', ') %>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('[data-toggle="popover"]').popover()
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
