<div class="col-sm-3">
  <%= image_tag @movie.poster.url, alt: @movie.title, class: "img-responsive poster" %>
</div>
<div class="<%= local_assigns.has_key?(:full) ? 'col-sm-9' : 'col-sm-6' %> well">
  <h2 class="movie-title"><b><%= @movie.title.upcase %></b> <small>&nbsp;<%= @movie.year %>
  <% if user_signed_in? %>
    <%= link_to t('movie.edit'), edit_movie_path, class: 'pull-right' %>
  <% end %>
  </small>
  </h2>
  <hr/>