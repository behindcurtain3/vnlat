<% provide(:title, @movie.title) %>
<div class="col-sm-3">
  <%= image_tag @movie.poster.url, alt: @movie.title, class: "img-responsive poster" %>
  <% unless current_page?(:controller => 'movies', :action => 'show') %>
    <div class="text-center">
      <h4><%= link_to t('movie.home'), movie_path(@movie) %></h4>
    </div>
  <% end %>
</div>
<div class="<%= local_assigns.has_key?(:full) ? 'col-sm-9' : 'col-sm-6' %>">
  <h2 class="movie-title"><b><%= @movie.title.upcase %></b> <small>
  <% if user_signed_in? %>
    - <%= link_to t('movie.form.edit'), edit_movie_path %>
  <% end %>
  </small>
  </h2>
  <p class="highlight">
    <% director = @movie.workers.where("role = ? AND featured = ?", "Director", true).first %>
    <% if director.present? %>
    <%= t 'movie.attr.directed' %> <%= link_to director.name, person_path(director) %>
    <% end %>
  </p>
  <hr/>