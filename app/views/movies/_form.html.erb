<div>
  <%= form_for(@movie) do |f| %>
  <fieldset>
    <legend><% if f.object.new_record? %>NEW<% else %>EDIT<% end%> MOVIE</legend>
    <% if @movie.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
  
        <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :title, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :title, :autofocus => true, :class => "form-control", :placeholder => "Title" %>
        <span class="help-block"></span>
      </div>
    </div>
  
    <div class="form-group">
      <%= f.label :year, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.number_field :year, :class => "form-control", :placeholder => "Year" %>
        <span class="help-block"></span>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :poster, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= image_tag @movie.poster.url(:thumb) %>
        <%= f.file_field :poster %>  
        <span class="help-block"></span>
      </div>
    </div>
  
    <% if graham? %>
    
      <div class="form-group">
        <%= f.label t('movie.violence'), :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.number_field :g_v, :class => "form-control", :placeholder => t('movie.violence') %>
          <span class="help-block"></span>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t('movie.nudity'), :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.number_field :g_n, :class => "form-control", :placeholder => t('movie.nudity') %>
          <span class="help-block"></span>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t('movie.language'), :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.number_field :g_l, :class => "form-control", :placeholder => t('movie.language') %>
          <span class="help-block"></span>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t('movie.adult'), :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.number_field :g_at, :class => "form-control", :placeholder => t('movie.adult') %>
          <span class="help-block"></span>
        </div>
      </div>
    
    <% end %>
    <% if justin? %>
      
      <div class="form-group">
        <%= f.label t('movie.violence'), :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.number_field :j_v, :class => "form-control", :placeholder => t('movie.violence') %>
          <span class="help-block"></span>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t('movie.nudity'), :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.number_field :j_n, :class => "form-control", :placeholder => t('movie.nudity') %>
          <span class="help-block"></span>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t('movie.language'), :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.number_field :j_l, :class => "form-control", :placeholder => t('movie.language') %>
          <span class="help-block"></span>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t('movie.adult'), :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.number_field :j_at, :class => "form-control", :placeholder => t('movie.adult') %>
          <span class="help-block"></span>
        </div>
      </div>
      
    <% end %>
  
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit 'Save', :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
  <% end %>
</div>
