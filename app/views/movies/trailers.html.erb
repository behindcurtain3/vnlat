<%= render 'header' %>
  <h4><%= t 'movies.attr.trailers' %></h4>

  <% if @movie.trailers.any? %>
    <% @movie.trailers.each do |trailer| %>
      <p>
        <%= render 'shared/video', embed: trailer %>
      </p>
    <% end %>
  <% else %>
    <p>No trailers are currently available.</p>
  <% end %>
</div>

