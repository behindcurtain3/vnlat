<%= render 'header' %>
  <h4><%= t 'movies.attr.reviews' %></h4>

  <% if @movie.reviews.any? %>
    <% @movie.reviews.each do |review| %>
      <p>
        <%= render 'shared/video', embed: review %>
      </p>
    <% end %>
  <% else %>
    <p>No reviews are currently available.</p>
  <% end %>
</div>

