<%= render 'header' %>
  <h4><%= t 'movies.attr.quotes' %></h4>

  <% if @movie.quotes.any? %>
    <% @movie.quotes.each do |quote| %>
      <blockquote class="blockquote">
        <p>
          "<%= quote.text %>"
        </p>
        <footer><% if quote.appearance.character.nil? %><%= quote.appearance.display %><% else %><%= link_to quote.appearance.display, character_path(quote.appearance.character) %><% end %></footer>
      </blockquote>
    <% end %>
  <% else %>
    <p>No quotes are currently available.</p>
  <% end %>
</div>

<%= render 'sidebar' %>